<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.alertsapp.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="222dp"
        android:text="Employee ID"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="14dp"
        android:text="Password"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/empid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/pswd"
        android:textSize="20dp"
        android:clickable="true"
        android:text="    Enter employee id    "
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginEnd="13dp"
        android:ems="10"
        android:text=""
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/empid"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:text="Andon System"
        android:textSize="28dp"
        android:textStyle="bold"
        android:id="@+id/textView75" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pswd"
        android:layout_below="@+id/pswd"
        android:layout_marginTop="54dp"
        android:background="#2b47de"
        android:text="LOG IN"
        android:textColor="#f9f9f9"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/login"/>

</RelativeLayout>
